<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER_LEFT" spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.hypno.screenlockerdesktop.SettingsController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Device Name:" />
    <TextField fx:id="deviceNameField" />

    <Label text="Image:" />
    <ComboBox fx:id="imageComboBox" prefWidth="150.0" />

    <HBox spacing="10.0" alignment="CENTER_LEFT" VBox.vgrow="ALWAYS">
        <Button fx:id="connectButton" onAction="#handleConnectButton" text="Connect" />
        <Button fx:id="pauseButton" onAction="#handlePauseButton" text="Pause" managed="false" visible="false" />
        <Button fx:id="unpauseButton" onAction="#handleUnpauseButton" text="Unpause" managed="false" visible="false" />
    </HBox>
    
    <Label fx:id="statusLabel" text="Status: Disconnected" />
</VBox>